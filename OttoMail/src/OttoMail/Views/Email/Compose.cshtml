@{ 
    ViewData["Title"] = "Compose";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model OttoMail.Models.Email
<div class="container-fluid">
    <h2>Compose a message</h2>
    @using (Html.BeginForm())
    {
        <div class="form-group">
            @Html.LabelFor(m => m.Subject)
            @Html.TextBoxFor(m => m.Subject)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Body)
            @Html.EditorFor(m => m.Body)
        </div>


        <button id="compose" type="submit" value="Send" class="btn btn-primary">Send</button>
    }
    @Html.ActionLink("Back to Inbox", "Index")
</div>